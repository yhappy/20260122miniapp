<!--pages/themes/themes.wxml-->
<view class="container">
  <view class="top-bar">
    <view class="back-btn" bindtap="goBack">
      <text class="back-icon">←</text>
      <text class="back-text">返回</text>
    </view>
  </view>

  <view class="header">
    <view class="header-title">十大主题</view>
    <view class="header-subtitle">精选内容，深度探索</view>
  </view>

  <scroll-view class="themes-list" scroll-y>
    <view class="theme-item" wx:for="{{themes}}" wx:key="id" bindtap="goToNews" data-id="{{item.id}}">
      <view class="theme-icon">{{item.icon}}</view>
      <view class="theme-info">
        <view class="theme-title">{{item.title}}</view>
        <view class="theme-desc">{{item.description}}</view>
        <view class="theme-count">{{item.count}} 篇稿件</view>
      </view>
      <view class="theme-arrow">→</view>
    </view>
  </scroll-view>
</view>
