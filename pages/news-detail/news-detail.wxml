<view class="container">
  <!-- 返回按钮 - 与 news 页面一致 -->
  <view class="back-btn" style="top: {{backButtonTop + 10}}rpx" bindtap="goBack">
    <image class="back-icon" src="https://app5.fjsen.com/h5/20260122/images/back.png" mode="widthFix"></image>
  </view>

  <!-- 加载状态 -->
  <view class="loading" wx:if="{{loading}}" style="padding-top: calc({{backButtonTop}}rpx + 60rpx)">
    <text>加载中...</text>
  </view>

  <!-- 错误状态 -->
  <view class="error" wx:elif="{{error}}" style="padding-top: calc({{backButtonTop}}rpx + 60rpx)">
    <text class="error-icon">⚠️</text>
    <text class="error-text">加载失败，请稍后重试</text>
  </view>

  <!-- 新闻详情 - 富文本内容 -->
  <view class="article" wx:else style="padding-top: calc({{backButtonTop}}rpx + 60rpx)">
    <rich-text class="article-content" nodes="{{article.content}}"></rich-text>
  </view>
</view>
