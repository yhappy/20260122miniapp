.container {
  background-color: #fff;
  min-height: 100vh;
}

/* 返回按钮 - 与 news 页面完全一致 */
.back-btn {
  position: fixed;
  /* top 通过 JS 动态计算设置 */
  left: 30rpx;
  width: 120rpx;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  /* 移除点击高亮效果 */
  -webkit-tap-highlight-color: transparent;
  user-select: none;
  -webkit-user-select: none;
}

.back-btn-hover {
  /* 点击时无视觉效果 */
}

.back-icon {
  width: 100%;
  display: block;
  filter: drop-shadow(0 0 8rpx white);

}

.loading,
.error {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 28rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
}

.article {
  padding: 30rpx;
}

.article-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
  word-wrap: break-word;
}

.article-content .source_date {
  text-align: center;
  font-size: 14px;
  color: #999;
  margin-bottom: 8px !important;
}


.article-content .pClass {
  margin-bottom: 15px !important;
}

.article-content .h1Class {
  text-align: center;
  line-height: 28px;
  font-size: 22px;
  padding: 20px 0 8px 0;
  font-weight: normal;
}