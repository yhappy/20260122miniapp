.container {
  background-color: #fff;
  min-height: 100vh;
}

/* 返回按钮 - 与 news 页面完全一致 */
.back-btn {
  position: fixed;
  /* top 通过 JS 动态计算设置 */
  left: 30rpx;
  width: 120rpx;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  /* 移除点击高亮效果 */
  -webkit-tap-highlight-color: transparent;
  user-select: none;
  -webkit-user-select: none;
}

.back-btn:active {
  /* 点击时无视觉效果 */
}

.back-icon {
  width: 100%;
  display: block;
}

.loading,
.error {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 28rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
}

.article {
  padding: 30rpx;
}

.article-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
  word-wrap: break-word;
}

/* 富文本图片样式 */
.article-content img {
  max-width: 100% !important;
  height: auto !important;
  display: block;
  margin: 20rpx 0;
}

/* 富文本段落样式 */
.article-content p {
  margin: 20rpx 0;
  line-height: 1.8;
}


