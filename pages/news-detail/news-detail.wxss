.container {
  background-color: #fff;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.loading,
.error {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 200rpx 0;
  color: #999;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
}

.article {
  padding: 30rpx;
}

.article-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.5;
  margin-bottom: 30rpx;
}

.article-meta {
  margin-bottom: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 8rpx;
}

.meta-label {
  color: #999;
  margin-right: 8rpx;
}

.meta-value {
  color: #666;
}

.divider {
  height: 1rpx;
  background-color: #e8e8e8;
  margin: 30rpx 0;
}

.article-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
  text-align: justify;
}

.actions {
  margin-top: 60rpx;
  padding: 0 20rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 44rpx;
  font-size: 30rpx;
  border: none;
}

.action-btn:active {
  background-color: #096dd9;
}
