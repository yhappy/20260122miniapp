.container {
  width: 100%;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

.map {
  width: 100%;
  height: 100%;
}

.map-info {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  width: 400rpx;
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.info-desc {
  font-size: 26rpx;
  color: #666;
}

.bottom-actions {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 20rpx;
  width: 90%;
  justify-content: center;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  max-width: 320rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.btn-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.action-btn.primary .btn-text {
  color: #fff;
}
