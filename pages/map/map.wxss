.container {
  width: 100%;
  min-height: 100vh;
  background: #fffede;
  /* 黄色背景 */
  position: relative;
  overflow: hidden;
}

/* 淡入动画定义 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

/* 返回按钮 - 与 news 页面完全一致 */
.back-btn {
  position: fixed;
  /* top 通过 JS 动态计算设置 */
  left: 30rpx;
  width: 120rpx;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  /* 移除点击高亮效果 */
  -webkit-tap-highlight-color: transparent;
  user-select: none;
  -webkit-user-select: none;
}

.back-btn:active {
  /* 点击时无视觉效果 */
}

.back-icon {
  width: 100%;
  height: 100%;
  display: block;
  filter: drop-shadow(0 0 8rpx white);
}

/* 内容区域 */
.content-area {
  width: 100%;
  min-height: 100vh;
  position: relative;
}

/* 城市横向滚动列表 - 返回按钮下方 */
.city-scroll {
  position: fixed;
  left: 0;
  width: 100%;
  white-space: nowrap;
  padding: 0rpx 0rpx;
  box-sizing: border-box;
  z-index: 50;
  background: linear-gradient(to bottom, #fffede 0%, #fffede 80%, rgba(255, 254, 222, 0) 100%);
}

.city-list {
  display: inline-flex;
  flex-direction: row;
  gap: 0rpx;
  align-items: center;
}

/* 城市项 */
.city-item {
  display: inline-block;
  flex-shrink: 0;
  text-align: center;
  -webkit-tap-highlight-color: transparent;
  user-select: none;
  -webkit-user-select: none;
  transition: all 0.3s ease;
  box-sizing: border-box;

}

/* 城市图片 */
.city-image {
  width: 108rpx;
  height: 70rpx;
  display: block;
  margin: 0 20rpx 0 20rpx;
}

/* 中部偏上：标题 */
.title {
  position: absolute;
  top: 240rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  z-index: 10;
  opacity: 0;
  animation: fadeIn 1s ease-out 0.3s forwards;
}

/* 中部偏右：装饰图片 s2p7 */
.s2p7 {
  position: absolute;
  /* top 通过内联样式从配置中设置 */
  right: 40rpx;
  width: 12%;
  height: 10rpx;
  z-index: 8;
  opacity: 0;
  animation: fadeIn 1s ease-out 0.5s forwards;
}

/* 中部中间：地图 */
.map {
  position: absolute;
  top: 400rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  z-index: 9;
  opacity: 0;
  animation: fadeIn 1s ease-out 0s forwards;
}

/* 地图上的叠放点图片 */
.dot {
  position: absolute;
  z-index: 10;
  width: 6%;
  height: 100rpx;
  /* top 和 left 通过内联样式设置 */
  opacity: 0;
  animation: fadeIn 0.6s ease-out forwards;
}

/* 每个 dot 依次出现，间隔 0.08s */
.dot-1 { animation-delay: 0.70s; }
.dot-2 { animation-delay: 0.78s; }
.dot-3 { animation-delay: 0.86s; }
.dot-4 { animation-delay: 0.94s; }
.dot-5 { animation-delay: 1.02s; }
.dot-6 { animation-delay: 1.10s; }
.dot-7 { animation-delay: 1.18s; }
.dot-8 { animation-delay: 1.26s; }
.dot-9 { animation-delay: 1.34s; }
.dot-10 { animation-delay: 1.42s; }
.dot-11 { animation-delay: 1.50s; }
.dot-12 { animation-delay: 1.58s; }
.dot-13 { animation-delay: 1.66s; }
.dot-14 { animation-delay: 1.74s; }
.dot-15 { animation-delay: 1.82s; }
.dot-16 { animation-delay: 1.90s; }
.dot-17 { animation-delay: 1.98s; }

/* 底部两列文字展示 */
.text-columns {
  position: absolute;
  /* top 通过内联样式设置 */
  left: 0;
  width: 100%;
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
  z-index: 10;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  opacity: 0;
  animation: fadeIn 1s ease-out 0.9s forwards;
}

.column {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.column.left {
  align-items: flex-start;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.column.right {
  align-items: flex-start;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.column-text {
  font-size: 22rpx;
  font-weight: bolder;
  color: #8B4513;
  line-height: 32rpx;
  margin-bottom: 8rpx;
  display: block;
  text-decoration: underline dotted #8b4513b2;
  text-underline-offset: 4rpx;
  text-decoration-thickness: 0.5rpx;
  transition: all 0.2s ease;
  cursor: pointer;
}

.column-text:active {
  color: #A0522D;
  text-decoration: underline solid #A0522D;
  transform: scale(0.98);
}

/* 详情弹窗遮罩层 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
  pointer-events: none;
}

.popup-mask.show {
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
}

/* 弹窗内容 */
.popup-content {
  width: 100%;
  max-height: 70vh;
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  padding: 0 0 40rpx 0;
  position: relative;
  transform: translateY(500rpx);
  opacity: 0;
  transition: transform 0.3s ease, opacity 0.3s ease;
  overflow-y: auto;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.popup-content.show {
  transform: translateY(0);
  opacity: 1;
}

/* 关闭按钮 */
.popup-close {
  position: fixed;
  bottom: 67vh;
  right: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  z-index: 1001;
  transform: translateY(500rpx);
  opacity: 0;
  transition: transform 0.3s ease, opacity 0.3s ease;
}

.popup-close.show {
  transform: translateY(0);
  opacity: 1;
}

.popup-close:active {
  background: rgba(240, 240, 240, 0.5);
  transform: scale(0.9);
}

.close-icon {
  font-size: 60rpx;
  color: #666;
  line-height: 1;
  font-weight: 300;
}

/* 景点图片 */
.popup-image {
  width: 100%;
  height: 400rpx;
  display: block;
  border-radius: 40rpx 40rpx 0 0;
  object-fit: cover;
}

/* 景点信息区域 */
.popup-info {
  padding: 40rpx 40rpx 140rpx;
}

/* 景点名称 */
.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #8B4513;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

/* 联系电话 */
.popup-contact {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 16rpx 20rpx;
  background: #fff8f0;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.popup-contact:active {
  background: #f0e6d8;
  transform: scale(0.98);
}

.contact-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.contact-text {
  font-size: 26rpx;
  color: #8B4513;
  line-height: 1.4;
}

/* 详细地址 */
.popup-address {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding: 16rpx 20rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.popup-address:active {
  background: #ebebeb;
  transform: scale(0.98);
}

.address-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.address-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  flex: 1;
}

/* 开放时间 */
.popup-opening-hours {
  margin-bottom: 20rpx;
  padding: 16rpx 20rpx;
  background: #fafafa;
  border-radius: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 12rpx;
}

.opening-hours-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-line;
  display: block;
  word-break: break-all;
}

/* 简介 */
.popup-description {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #fafafa;
  border-radius: 16rpx;
  border-left: 6rpx solid #8B4513;
}

.description-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #8B4513;
  display: block;
  margin-bottom: 12rpx;
}

.description-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  display: block;
}

/* 操作按钮 */
.popup-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx 40rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 1001;
  opacity: 0;
  transform: translateY(100%);
  transition: all 0.3s ease;
}

.popup-actions.show {
  opacity: 1;
  transform: translateY(0);
}

.action-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  font-size: 28rpx;
  border: none;
  transition: all 0.2s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
  color: #fff;
}

.action-btn.primary:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.action-btn.secondary {
  background: #f5f5f5;
  color: #8B4513;
  border: 2rpx solid #8B4513;
}

.action-btn.secondary:active {
  background: #e8e8e8;
  transform: scale(0.98);
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 500;
}