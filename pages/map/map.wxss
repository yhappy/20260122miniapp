.container {
  width: 100%;
  min-height: 100vh;
  background: #fffede;
  /* 黄色背景 */
  position: relative;
  overflow: hidden;
}

/* 返回按钮 - 与 news 页面完全一致 */
.back-btn {
  position: fixed;
  /* top 通过 JS 动态计算设置 */
  left: 30rpx;
  width: 120rpx;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  /* 移除点击高亮效果 */
  -webkit-tap-highlight-color: transparent;
  user-select: none;
  -webkit-user-select: none;
}

.back-btn:active {
  /* 点击时无视觉效果 */
}

.back-icon {
  width: 100%;
  display: block;
  filter: drop-shadow(0 0 8rpx rgba(0, 0, 0, 0.3));
}

/* 内容区域 */
.content-area {
  width: 100%;
  min-height: 100vh;
  position: relative;
}

/* 城市横向滚动列表 - 返回按钮下方 */
.city-scroll {
  position: fixed;
  left: 0;
  width: 100%;
  white-space: nowrap;
  padding: 0rpx 0rpx;
  box-sizing: border-box;
  z-index: 50;
  background: linear-gradient(to bottom, #fffede 0%, #fffede 80%, rgba(255, 254, 222, 0) 100%);
}

.city-list {
  display: inline-flex;
  flex-direction: row;
  gap: 10rpx;
  margin: 0 20rpx 0 20rpx;

}

/* 城市项 */
.city-item {
  display: inline-block;
  width: 100rpx;
  margin: 0 20rpx 0 20rpx;
  flex-shrink: 0;
  text-align: center;
  -webkit-tap-highlight-color: transparent;
  user-select: none;
  -webkit-user-select: none;
  transition: all 0.3s ease;
  box-sizing: border-box;
}



/* 城市图片 */
.city-image {
  width: 100rpx;
  height: 70rpx;
  display: block;
}

/* 中部偏上：福州标题 */
.title {
  position: absolute;
  top: 340rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  z-index: 10;
}

/* 中部偏右：装饰图片 s2p7 */
.s2p7 {
  position: absolute;
  top: 970rpx;
  right: 40rpx;
  width: 12%;
  z-index: 8;
}

/* 中部中间：福州地图 */
.map {
  position: absolute;
  top: 500rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  z-index: 9;
}