/* 云彩漂浮动画 - 上下左右轻微浮动 */
@keyframes cloudFloat {
  0% {
    transform: translateX(-50%) translateY(0) translateX(0) scale(1);
  }
  25% {
    transform: translateX(calc(-50% + 8rpx)) translateY(-5rpx) scale(1.01);
  }
  50% {
    transform: translateX(-50%) translateY(-8rpx) translateX(0) scale(1.02);
  }
  75% {
    transform: translateX(calc(-50% - 8rpx)) translateY(-5rpx) scale(1.01);
  }
  100% {
    transform: translateX(-50%) translateY(0) translateX(0) scale(1);
  }
}
