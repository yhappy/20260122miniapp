/* pages/home/home.wxss */
.container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 120rpx 30rpx 60rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.header-title {
  font-size: 56rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 20rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #7f8c8d;
}

.buttons-wrapper {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  padding: 0 20rpx;
}

.button-card {
  background: #ffffff;
  border-radius: 30rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.button-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
}

.left-card::before {
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.right-card::before {
  background: linear-gradient(90deg, #f093fb 0%, #f5576c 100%);
}

.button-card:active {
  transform: scale(0.98);
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.15);
}

.card-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 20rpx;
}

.card-desc {
  font-size: 26rpx;
  color: #95a5a6;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.card-arrow {
  font-size: 48rpx;
  color: #bdc3c7;
  margin-top: 10rpx;
}
