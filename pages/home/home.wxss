/* pages/home/home.wxss */
.container {
  width: 100%;
  height: 100vh;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  box-sizing: border-box;
}

/* 背景图片 - s1p15 - 与 cover 相同 */
.bg-image.s1p15 {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

/* 内容层 - 使用固定高度并居中 */
.content-layer {
  position: relative;
  width: 100%;
  height: 1500rpx;
  z-index: 1;
  flex-shrink: 0;
}

