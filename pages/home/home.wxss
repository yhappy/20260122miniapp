/* 淡入动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 闪烁引导点击动画 - 无限循环 */
@keyframes blinkLoop {
  0% {
    opacity: 1;
    transform: translateX(-50%) scale(1);
  }
  20% {
    opacity: 0.5;
    transform: translateX(-50%) scale(1.15);
  }

  100% {
    opacity: 1;
    transform: translateX(-50%) scale(1);
  }
}

/* 城市循环闪烁动画 - 10秒循环，每个城市闪烁1秒 */

/* 福州 (闽A) - 0-1秒 (0%-10%) 闪烁 */
