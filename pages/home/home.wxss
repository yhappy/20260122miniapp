  0%, 10% { opacity: 1; transform: translateX(-50%) scale(1); }
  5% { opacity: 0.5; transform: translateX(-50%) scale(1.15); }
  10%, 100% { opacity: 1; transform: translateX(-50%) scale(1); }
}

